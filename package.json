{
  "name": "fleeting",
  "version": "1.0.0",
  "description": "轻量桌面备忘录，基于 Markdown 存储",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac dmg --publish never"
  },
  "build": {
    "appId": "com.fleeting.app",
    "productName": "Fleeting",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "node_modules/**"
    ]
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.8.1"
  }
}
